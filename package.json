{
  "name": "ts-postgres-wrapper",
  "version": "0.1.0",
  "description": "TypeScript wrapper for type-safe queries with node-postgres",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run unit-test && npm run integration-test",
    "unit-test": "npx ts-node ./tests/unit_test.ts",
    "integration-test": "npx ts-node ./tests/integration_test.ts",
    "test:unit": "npx ts-node test.ts",
    "test:integration": "npx ts-node integration-test.ts"
  },
  "keywords": [
    "postgres",
    "pg",
    "typescript",
    "type-safe",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  }
}